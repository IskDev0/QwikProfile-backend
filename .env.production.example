# Production Environment Variables
# Copy this file to .env on your VPS server and fill in the values

# Database Configuration
POSTGRES_USER=devlinks
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=devlinks
DATABASE_URL=postgresql://devlinks:CHANGE_ME_TO_SECURE_PASSWORD@postgres:5432/devlinks

# Server Configuration
PORT=8000
NODE_ENV=production
FRONTEND_URL=https://yourdomain.com

# Security Secrets (Generate with: openssl rand -base64 32)
ACCESS_SECRET=CHANGE_ME_MIN_32_CHARS
REFRESH_SECRET=CHANGE_ME_MIN_32_CHARS
RESET_SECRET=CHANGE_ME_MIN_32_CHARS

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Cloudflare R2 / AWS S3 Configuration
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_PUBLIC_URL=https://your-bucket.r2.dev
R2_BUCKET_NAME=your_bucket_name

# Email Service (Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key

# Optional: Additional configuration
# LOG_LEVEL=info
# MAX_FILE_SIZE=10485760
